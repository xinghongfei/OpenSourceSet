<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/paddingleft">


                <com.like.LikeButton
                    android:id="@+id/one_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon_size="25dp"
                    app:icon_type="star" />

                <com.like.LikeButton
                    android:layout_below="@+id/one_like"
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon_size="25dp"
                    app:icon_type="thumb" />
                <com.like.LikeButton
                    android:id="@+id/like_button"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    app:icon_size="25dp"
                    app:icon_type="heart" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/t"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/paddingleft">

                <com.spark.submitbutton.SubmitButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Submit"
                    android:textColor="@color/gray"
                    app:sub_btn_background="@color/white"
                    app:sub_btn_duration="3000"
                    app:sub_btn_line_color="@color/green"
                    app:sub_btn_ripple_color="@color/green1"
                    app:sub_btn_tick_color="@color/sub_btn_ripple" />

                <com.like.LikeButton
                    android:id="@+id/submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    app:icon_size="25dp"
                    app:icon_type="heart" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/paddingleft">

                <com.example.xinghongfei.mylibrary.LoadingButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" />


                <!--todo 进度-->
                <com.like.LikeButton
                    android:id="@+id/smooth_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    app:icon_size="25dp"
                    app:icon_type="heart" />
            </RelativeLayout>



        </LinearLayout>


    </ScrollView>






    <include
        layout="@layout/snackccainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />


</LinearLayout>
